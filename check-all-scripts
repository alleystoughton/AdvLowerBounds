#!/bin/bash

# check all the EasyCrypt scripts

# SMT timeout in seconds -- try increasing

timeout=2

check() {
  echo checking $1;
  if easycrypt -timeout $timeout $1;
  then echo passed: $1;
       echo "";
  else echo failed: $1;
       echo "";
       echo "skipping remaining scripts";
  exit 1;
  fi;
}

check IntLog.ec
check IntDiv2.ec
check FSetAux.ec
check FRange.ec
check AllLists.ec

check AdvLowerBounds.eca
check UpperBounds.eca
check OrFunctionLB.ec

cd searching
echo cd to searching
echo ""

check SearchingProb.ec
check SearchingUB.ec
check SearchingLB.ec

echo cd to ..
cd ..

# success!

exit 0
